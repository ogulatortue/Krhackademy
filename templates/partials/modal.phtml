<?php
    if (session_status() === PHP_SESSION_NONE) {
        session_start();
    }
    $flash_message = $_SESSION['flash_message'] ?? null;
    if ($flash_message) {
        unset($_SESSION['flash_message']);
    }
?>

<div 
    id="modal-container" 
    class="modal-container"
    <?php if ($flash_message): ?>
        data-flash-type="<?= htmlspecialchars($flash_message['type']) ?>"
